{% extends 'base.jinja2' %}

{% block content %}
<h1>Welcome to your blog.</h1>
<!-- Here we've got a slightly smaller heading -->
<h2>Posts</h2>
<!-- This bullet point list will show a link for each post. -->
<ul>
	<!-- This is very similar to Python, but it's a Jinja2 for loopâ€”looks the same and even we have .items for the dictionary -->
	{% for post_id, post in posts.items() %}
		<!-- Here we use url_for to take us to the appropriate route. -->
		<li><a href="{{ url_for('post', post_id=post_id) }}">{{ post['title'] }}</a></li>
	{% endfor %}
</ul>

<a href="{{ url_for('create') }}">Create New Post</a
{% endblock %}
